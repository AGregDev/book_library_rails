<div class="mb-4 d-flex justify-content-start my-5">
  <%= form_with url: root_path, method: :get, local: true do%>
    <div class="form-group ">
      <label for="category" class="form-label me-2">Filter by Category:</label>
      <%= select_tag :category, 
            options_for_select(@categories.map { |category| [category.name, category.id] }, params[:category]), 
            include_blank: "All Categories", 
            class: "form-select me-2" %>
      <%= submit_tag "Filter", class: "btn btn-primary my-3" %>
    </div>
  <% end %>
</div>

