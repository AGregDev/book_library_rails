<div class="container my-5">
  <% if user_signed_in? %>
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h2>Welcome to BookLibrary</h2>
        <p>You are signed in as <%= current_user.email %>.</p>
        <div class="mb-3">
          <%= link_to "Admin Dashboard", admin_root_path, class: "btn btn-primary btn-lg mx-2" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg mx-2" %>
        </div>

 
  <% end %>
</div>
